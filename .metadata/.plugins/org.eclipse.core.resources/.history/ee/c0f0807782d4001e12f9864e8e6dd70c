package day1;

public class Test7 {

	public static void main(String[] args) {
		// 반복문
//		for (선언; 조건; 증감) {
//			System.out.println("으샤");
//		}
		
		// i = i+1 -> i += 1 -> i++ (1을 더할 때만)
		// i = i-1 -> i -= 1 -> i--
		for (int i = 0; i < 10; i++) {
			System.out.println(i);	
		}
		int x = 0;
		System.out.println(x++); // x = 0
		System.out.println(++x); // x = 2
		
		
	}

}
