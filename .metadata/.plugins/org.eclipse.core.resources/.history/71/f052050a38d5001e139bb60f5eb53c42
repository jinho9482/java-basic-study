		boolean pass = true;
		for (int x = 1; x < 10; x++) {
			for (int y = 1; y < 10; y++) {
				System.out.println("x=" + x + ", y=" + y);
				//33까지 출력
				if (x == 3 && y == 3) {
					pass = false;
					break;
				}
			}
			if (!pass) break;
		}
			
	
		
		
		outerloop:
		for (int x = 1; x < 10; x++) {
			for (int y = 1; y < 10; y++) {
				System.out.println("x=" + x + ", y=" + y);
				//33까지 출력
				if (x == 3 && y == 3) break outerloop;
			}
		}
		
